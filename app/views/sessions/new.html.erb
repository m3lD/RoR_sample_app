<% provide(:title, "Iniciar sesion") %>
<h1>Iniciar sesion</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.text_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= link_to "¿Olvido su contraseña?", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>
      
      <%= f.label :remember_me, class: "checkboxinline" do %>
        <%= f.check_box :remember_me %>
        <span>Recordarme en este equipo</span>
      <% end %>
      
      <%= f.submit "Iniciar sesion", class: "btn btn-primary" %>
    <% end %>

    <p>¿Nuevo usuario? <%= link_to "Registrarse ahora!", signup_path %></p>
  </div>
</div>